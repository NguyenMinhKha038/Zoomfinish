                <div class="row justify-content-center">
                    
                    <!-- Post Content -->
                    <article>

                        <div class="card text-center" style="width:1200px">
                            <% for (var i=0; i < blogposts.length; i++) { %>
                            <div class="card-header alert alert-warning">
                              THÔNG BÁO <span class="fa fa-bell" aria-hidden="true"></span>
                            </div>
                            <div class="card-body">
                              <h5 class="card-title"><%= blogposts[i].title %></h5>
                              <p class="card-text"><%= blogposts[i].body %>.</p>
                              <a href="/viewpost/<%= blogposts[i]._id %>" class="btn btn-primary">CHI TIẾT</a>
                            </div>
                            <div class="card-footer text-muted">
                                <p class="post-meta"><%= blogposts[i]._id.getTimestamp() %>
